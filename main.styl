body
  font-family "Roboto"
  text-align center
  font-size 17
  line-height 180%
  padding 0
  background #f4f4f7
  color #3e3e3e
  margin 0

h1
  font-family 'Roboto' sans-serif
  text-align center
  font-weight 700
  font-size 87px
  // text-transform uppercase
  line-height 1.2em
  letter-spacing: 3px
  margin 20
  padding 65
  
h2
  max-width 450px
  text-align center
  padding 10px
  font-size 26
  margin 10px auto
  letter-spacing: 1px
  line-height 1.15em

h3
  font-weight 400
  font-size 20px
  line-height 1.4em
  text-align center
  max-width 600px
  padding 0px
  margin 10px auto

h4
  font-size 16px
  color grey
  
p
  text-align center
  line-height 160%
  font-size 20
  color #3e3e3e
  text-decoration none
  // margin 30
  padding 30
  border-top 290
  color: red
  text-decoration: none

.cover
  width 100%
  height 100%
  background-color red
  position relative
  overflow hidden
  background-color black
  // background-image url('images/IMG_1045.JPG')
  // background-size cover
  // background-position center
  
  .documentation  
    min-width 100%
    min-height 100%
    width auto
    height auto
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    opacity .7
  
  .textover
    max-width 800px
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    align center
    color white

.main 
  width 560px
  margin 60px auto
  text-align left
  line-height 150%
  font-size 17px

  ul
    list-style none
    padding 0
    margin 50px 0
    border-top 1px solid rgba(0,0,0,0)
    
    li
      padding 8px 0
      border-bottom 1px solid rgba(0,0,0,0)
    
      .counter
        width 170px
        min-height 1px
        float left
      
      a
        text-decoration none
        &:hover
          text-decoration underline
          

.gallery
  width 100%
  height 100%
  
  .swiper-slide
    background-size cover
    background-position center
    background-repeat no-repeat
    margin 26px 0
  

